@page
@model IndexModel



<div class="row justify-content-md-center">

    <h2 class ="text-center">Skins Disponíveis</h2>

    @foreach (var item in Model.ListaSkins)
    {
        <div class="card col-3 m-2">
            <img src="@item.ImagemUri" class="p-3" style="border-radius: 25px">
            <div class="card-body">
                <h5 class="card-title">@item.Nome</h5>
                <p class="card-text">@item.Desgaste</p>
                <p class="card-text">
                    @if (item.DisponivelParaRetirada)
                    {
                        <span class="text-success">Disponível para retirada imediata</span>
                    }
                    else
                    {
                        <span class="text-warning">Retirada disponível em alguns dias</span>
                    }
                </p>
                <a class="btn btn-primary"
                asp-page="/Details"
                asp-route-slug="@item.NomeSlug"
                asp-route-id="@item.SkinId">Ver mais</a>
            </div>
        </div>
    }

</div>
