@page
@{
    ViewData["Title"] = "SkinZone";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
    }

    h2 {
        border-bottom: 2px solid #343a40;
        padding-bottom: 10px;
        margin-top: 30px;
    }

    p {
        margin-bottom: 25px;
    }

    li{
        margin-bottom: 20px;
    }

    h6{
        margin-bottom: 20px;
    }

    /* Adicionado o estilo para alinhar à direita */
    img {
        float: left;
        margin: 20px; /* Ajuste conforme necessário para espaçamento desejado */
        margin-right: 50px;
        max-width: 400px; /* Ajuste o valor conforme necessário para limitar a largura da imagem */
        height: auto; /* Garante que a altura seja ajustada proporcionalmente à largura */
    }

    /* Limpar o float para evitar problemas de layout */
    .clear {
        clear: both;
    }
</style>

<h1>@ViewData["Title"]</h1>

<p></p>


